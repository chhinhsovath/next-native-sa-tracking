generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String             @id @default(cuid())
  email             String             @unique
  password          String
  firstName         String
  lastName          String
  role              Role
  position          String?
  department        String?
  isActive          Boolean            @default(true)
  createdAt         DateTime           @default(now())
  updatedAt         DateTime           @updatedAt
  registeredAt      DateTime           @default(now())
  attendanceRecords AttendanceRecord[]
  leaveRequests     LeaveRequest[]
  missionRequests   MissionRequest[]
  workPlans         WorkPlan[]

  @@map("users")
}

model OfficeLocation {
  id                String             @id @default(cuid())
  name              String
  latitude          Float
  longitude         Float
  radius            Float              @default(50)
  isActive          Boolean            @default(true)
  createdAt         DateTime           @default(now())
  attendanceRecords AttendanceRecord[]

  @@map("office_locations")
}

model AttendanceRecord {
  id             String         @id @default(cuid())
  userId         String
  officeId       String
  attendanceType AttendanceType
  timestamp      DateTime       @default(now())
  latitude       Float
  longitude      Float
  status         String
  createdAt      DateTime       @default(now())
  office         OfficeLocation @relation(fields: [officeId], references: [id])
  user           User           @relation(fields: [userId], references: [id])

  @@map("attendance_records")
}

model LeaveRequest {
  id         String      @id @default(cuid())
  userId     String
  startDate  DateTime
  endDate    DateTime
  reason     String
  status     LeaveStatus @default(PENDING)
  approvedBy String?
  approvedAt DateTime?
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt
  user       User        @relation(fields: [userId], references: [id])

  @@map("leave_requests")
}

model MissionRequest {
  id          String        @id @default(cuid())
  userId      String
  title       String
  description String
  startDate   DateTime
  endDate     DateTime
  status      MissionStatus @default(PENDING)
  approvedBy  String?
  approvedAt  DateTime?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  user        User          @relation(fields: [userId], references: [id])

  @@map("mission_requests")
}

model WorkPlan {
  id          String         @id @default(cuid())
  userId      String
  title       String
  description String
  dueDate     DateTime
  status      WorkPlanStatus @default(DRAFT)
  progress    Int            @default(0)
  achievement String?
  output      String?
  comments    String?
  submittedAt DateTime?
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
  user        User           @relation(fields: [userId], references: [id])

  @@map("work_plans")
}

enum Role {
  STAFF
  ADMIN
}

enum AttendanceType {
  CHECK_IN_AM
  CHECK_OUT_AM
  CHECK_IN_PM
  CHECK_OUT_PM
}

enum LeaveStatus {
  PENDING
  APPROVED
  REJECTED
}

enum MissionStatus {
  PENDING
  APPROVED
  REJECTED
  COMPLETED
}

enum WorkPlanStatus {
  DRAFT
  SUBMITTED
  IN_PROGRESS
  COMPLETED
  REJECTED
}
